@model IEnumerable<Gatos_E_Sopas.Models.Gatos>

@{
    ViewBag.Title = "Pesquisar_Nome";
}

<h2>Pesquisar_Nome</h2>

<form method="post">
    <input type="text" name="txt_nome" value="" placeholder="Introduza o nome do gato..." />
    <input type="submit" value="Procurar" />
</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Raca)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Idade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Preco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.imagem_path)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Raca)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Idade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Preco)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.imagem_path)
        </td>
        <td>
            @{
                if (Session["perfil"].ToString() == "True")
                {
                    @Html.ActionLink("Editar | ", "Editar", new { id = item.ID });

                    @Html.ActionLink("Apagar | ", "Apagar", new { id = item.ID });
                }
                else
                {
                    @Html.ActionLink("Compra | ", "compras", new { id = item.ID });
                }
                @Html.ActionLink("Detalhes", "detalhes", new { id = item.ID });
            }
        </td>
    </tr>
}

</table>
